%h1 Create Blackmail
= form_for(@blackmail) do |f|
  = render 'shared/error_messages'
  .field
    = f.label :user_id # TODO: This needs to be a hidden field
    %br
    = f.text_field :user_id
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :description
    %br
    = f.text_area :description
  .field
    = f.label :victim_name
    %br
    = f.text_field :victim_name
  .field
    = f.label :victim_email
    %br
    = f.text_field :victim_email
  .field
    = f.label :expired_at
    %br
    = f.text_field :expired_at       
  .actions
    = f.submit "That's Blackmail!"
