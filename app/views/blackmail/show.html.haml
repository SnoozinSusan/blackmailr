%h1 Home 

%table
  %thead
    %tr
      %th(colspan = 6)
        Blackmail List
    %tr
      %th
        
      %th
        Title
      %th
        Expires
      %th
        Victim
      %th
        Desc.
      %th
        Countdown
  - @blackmail.each do |black|
    %tbody
      %tr
        %td
          =link_to 'EDIT', { :controller => "blackmail", :action => "edit", :id => black.id }
        %td
          =link_to black.title, { :controller => "blackmail", :action => "view", :id => black.id}
        %td
          =black.expired_at
        %td
          =black.victim_name
        %td
          =black.description
        %td
          - @time_left = DateTime.now - black.expired_at.to_datetime
          - if(@time_left.to_i >= 0)
            %span
            ="EXPIRED"
          - else
            %span.countdown{data: {'countdown-seconds' => (black.expired_at.to_i)}}
%br
