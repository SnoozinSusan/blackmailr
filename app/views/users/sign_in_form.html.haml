%h1 Sign in
= form_tag('/sign-in') do
  = render 'shared/error_messages', :object => f.object %>  
  .field
    = label_tag 'email'
    %br
    = text_field_tag 'email'
  .field
    = label_tag 'password'
    %br
    = password_field_tag 'password'
  .actions
    = submit_tag "Sign in"
.end
